<!DOCTYPE html>
<html lang="en">
    <%- include('layouts/head'); -%>
    <body>
        <!-- Navigation-->
        <%- include('layouts/navbar'); -%>
        <!-- Page Header-->

        <header class="masthead" style="background-image: url('<%= blogposts.image %>')">
            <div class="overlay"></div>
            <div class="container">
                <div class="row">
                    <div class="col-lg-8 col-md-10 mx-auto">
                        <div class="post-heading">
                            <h1><%= blogposts.title %></h1>
                            <h2 class="subheading"><%- blogposts.body %></h2>
                            <span class="meta"> Posted by 
                                <a href="#"><%= blogposts.userid.username %></a>
                                on <%= new Date(blogposts.dataPosted).toDateString() %>
                            </span>
                        </div>
                    </div>
                </div>
            </div>    
        </header>

        <!-- Post Content-->
        <article>
            <div class="container">
                <div class="row">
                    <div class="col-lg-8 col-md-10 mx-auto">
                        <%- blogposts.body %>
                    </div>
                </div>
            </div>
        </article>
        
        <hr>
        <!-- Footer-->
        <%- include('layouts/footer'); -%>
        <!-- Bootstrap core JS-->
        <%- include('layouts/scripts'); -%>
    </body>
</html>
